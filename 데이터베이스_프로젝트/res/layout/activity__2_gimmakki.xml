<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/gomenubutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gobackButton2"
        android:layout_alignBottom="@+id/gobackButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:onClick="gomenuButtonClicked2"
        android:textStyle="bold"
        android:text="메뉴" />

    <Button
        android:id="@+id/gobackButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:onClick="gobackButtonClicked2"
        android:textStyle="bold"
        android:text="돌아가기" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/gomenubutton2"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="김마끼"
                android:textSize="35dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/f2" />

            <ListView
                android:id="@+id/Listview"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="45dp" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/gimmakki" />

            <ListView
                android:id="@+id/List2"
                android:layout_width="match_parent"
                android:layout_height="590dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>